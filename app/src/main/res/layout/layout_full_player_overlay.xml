<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_player_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true"
    android:elevation="12dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/bg_album_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/album_art_description" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>

    <!-- 顶部返回栏：左=返回列表(绿)，右=返回播放器(蓝) -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_collapse_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
        android:gravity="center"
        android:text="@string/back_to_list"
        android:textColor="@android:color/white"
            android:background="@color/accent"
            android:elevation="16dp"/>
        <TextView
            android:id="@+id/btn_return_player"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="返回播放器"
            android:textColor="@android:color/white"
            android:background="@color/primary"
            android:visibility="gone"
            android:elevation="16dp"/>
    </LinearLayout>

    <!-- 页指示器（两个圆点） -->
    <LinearLayout
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="32dp"
        android:elevation="14dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dot_main"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/indicator_dot_selected"
            android:contentDescription=""
            android:layout_marginEnd="6dp"/>
        <ImageView
            android:id="@+id/dot_lyrics"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/indicator_dot_unselected"
            android:contentDescription=""/>
    </LinearLayout>

    <!-- 歌词页（懒加载） -->
    <ViewStub
        android:id="@+id/lyrics_stub"
        android:inflatedId="@+id/lyrics_container"
        android:layout="@layout/layout_lyrics_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"/>

    <!-- 顶部歌曲信息区：标题 + 艺术家/时间 -->
    <LinearLayout
        android:id="@+id/full_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="44dp">
        <TextView
            android:id="@+id/full_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"/>
        <TextView
            android:id="@+id/full_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- 中心主控区（更紧凑） -->
    <LinearLayout
        android:id="@+id/center_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/btn_prev_full"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_previous_rounded"
            android:tint="@android:color/white"
            android:contentDescription="@string/prev_button_desc"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:id="@+id/btn_play_pause_full"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_rounded"
            android:tint="@android:color/white"
            android:contentDescription="@string/play_pause_button_desc"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:id="@+id/btn_next_full"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_next_rounded"
            android:tint="@android:color/white"
            android:contentDescription="@string/next_button_desc"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <!-- 进度条区域（底部上方） -->
    <FrameLayout
        android:id="@+id/full_seek_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ProgressBar
            android:id="@+id/full_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:minHeight="16dp"
            android:maxHeight="16dp"
            android:progressDrawable="@drawable/progress_bar_rounded"
            android:visibility="visible"/>
        <SeekBar
            android:id="@+id/full_seekbar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:minHeight="36dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:thumb="@drawable/seekbar_thumb_invisible"
            android:thumbOffset="0dp"
            android:splitTrack="false"
            android:progressTint="#00000000"
            android:thumbTint="#FFFFFFFF"
            android:progressBackgroundTint="#00000000"/>
    </FrameLayout>

    <!-- 底部三控件行（音量按钮居中） -->
    <LinearLayout
        android:id="@+id/bottom_row"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/btn_play_mode_full"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_repeat_off"
            android:tint="@android:color/white"
            android:contentDescription="@string/repeat_mode_button_desc"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btn_volume_toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_volume"
            android:tint="@android:color/white"
            android:contentDescription="音量"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_info"
            android:tint="@android:color/white"
            android:contentDescription="@string/more"/>
    </LinearLayout>

    <!-- 音量调节覆盖页（点击空白关闭） -->
    <FrameLayout
        android:id="@+id/volume_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background_v2">
            <SeekBar
                android:id="@+id/volume_seek"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout> 