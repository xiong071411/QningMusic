<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:orientation="horizontal"
    android:padding="6dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/song_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        tools:text="01" />

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/album_art_description"
        tools:src="@drawable/default_album_art" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            tools:text="Song Title" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            tools:text="Artist" />

    </LinearLayout>

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        tools:text="3:45" />

    <!-- 下载状态和控制区域 -->
    <FrameLayout
        android:id="@+id/download_container"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp">

        <!-- 下载按钮 -->
        <ImageButton
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_download"
            android:contentDescription="@string/download_song"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <!-- 下载进度指示器 -->
        <ProgressBar
            android:id="@+id/download_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            style="?android:attr/progressBarStyleSmall" />

        <!-- 百分比文本 -->
        <TextView
            android:id="@+id/download_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="57%" />

        <!-- 已下载指示器 -->
        <ImageView
            android:id="@+id/download_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_downloaded"
            android:contentDescription="@string/song_downloaded"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <!-- 下载失败指示器 -->
        <ImageView
            android:id="@+id/download_failed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_download_failed"
            android:contentDescription="@string/download_failed"
            android:scaleType="centerInside"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>