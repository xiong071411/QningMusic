<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        app:title="通用"
        app:titleTextColor="@color/text_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 一键清理缓存 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_cache_summary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="清理缓存"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/text_primary"
                        android:src="@drawable/ic_delete" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 清理歌词缓存 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_clear_lyrics_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="清理歌词缓存"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/text_primary"
                        android:src="@drawable/ic_delete" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 缓存详情设置 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cache_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="缓存详情设置"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/text_primary"
                        android:src="@drawable/ic_next" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 解码兼容模式 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_transcoding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_transcoding_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="解码兼容模式（强制转码）"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_transcoding_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关闭"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_transcoding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 下载强制转码 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_download_transcoding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_download_transcoding_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="下载强制转码（非MP3 → 320kbps）"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_download_transcoding_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关闭"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_download_transcoding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 省电模式 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_low_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_low_power_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="省电模式"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_low_power_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关闭"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_low_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 播放进度刷新频率 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_progress_broadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_progress_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="播放进度刷新频率"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_progress_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="正常（0.5 秒）/ 慢速（1.5 秒）/ 最慢（2.5 秒）"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 测试日志记录（仅测试版可用） -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_test_log_recorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_logrecorder_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="测试日志记录（仅测试版）"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_logrecorder_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未在记录"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btn_log_start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="开始记录" />

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="1dp" />

                        <Button
                            android:id="@+id/btn_log_stop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="停止并保存" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 听歌记录服务器设置入口 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_listen_report_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="听歌记录服务器"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/text_primary"
                        android:src="@drawable/ic_next" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout> 