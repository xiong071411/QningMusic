<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background"
        app:title="播放器设置"
        app:titleTextColor="@color/text_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 背景模糊开关 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bg_blur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_bg_blur_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="背景模糊"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_bg_blur_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 背景模糊强度 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bg_blur_intensity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_bg_blur_intensity_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="背景模糊强度"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_bg_blur_intensity_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                    <SeekBar
                        android:id="@+id/seek_bg_blur_intensity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 歌词字号（当前行） -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_lyric_current_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="歌词字号（当前行）"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_lyric_current_size_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18sp"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                    <SeekBar
                        android:id="@+id/seek_lyric_current_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="8"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 歌词字号（其他行） -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_lyric_other_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="歌词字号（其他行）"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_lyric_other_size_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12sp"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                    <SeekBar
                        android:id="@+id/seek_lyric_other_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="6"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- 自定义歌词源（长按编辑URL模板） -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_custom_lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自定义歌词源（长按编辑 URL 模板）（第三方歌词需遵守来源许可）"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_custom_lyrics_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未配置"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 歌词平滑过渡（实验性） -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_lyric_smooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="歌词平滑过渡（实验性）"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_lyric_smooth_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 新增：允许长句滚动显示 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_lyric_long_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="允许长句滚动显示"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_lyric_long_marquee_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 新增：显示音频类型徽标 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_show_audio_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示音频类型"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_show_audio_type_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 新增：点击播放后自动打开全屏播放器 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_auto_open_full_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:strokeColor="@color/colorStrokeV2"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击播放后自动打开全屏播放器"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_auto_open_full_player_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout> 